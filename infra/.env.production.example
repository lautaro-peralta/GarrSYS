# Production Environment Variables for Docker Compose
# Copy this file to .env.production and update with your actual values

# MySQL Configuration (already in docker-compose.yml defaults)
MYSQL_USER=dsw
MYSQL_PASSWORD=your-secure-password-here
MYSQL_DATABASE=tpdesarrollo

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=15m

# Redis Configuration
REDIS_ENABLED=true

# Security & CORS
ALLOWED_ORIGINS=http://localhost,http://yourdomain.com,https://yourdomain.com
TRUST_PROXY=true

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@tgs-system.com

# Frontend Configuration
FRONTEND_URL=http://localhost
EMAIL_VERIFICATION_REQUIRED=true
